{
	"schemaVersion": 1,
	"id": "taxfreelevels",
	"version": "${mod_version}",
	"name": "Tax Free Levels",
	"description": "Flattens anvil and enchantment costs, removes the anvil limit and makes renaming items always cost 1 level.",
	"authors": [
		"Fourmisain"
	],
	"contact": {
		"homepage": "https://www.curseforge.com/minecraft/mc-mods/tax-free-levels",
		"sources": "https://github.com/Fourmisain/TaxFreeLevels",
		"issues": "https://github.com/Fourmisain/TaxFreeLevels/issues"
	},
	"license": "MIT",
	"icon": "assets/taxfreelevels/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.github.fourmisain.taxfreelevels.fabric.TaxFreeLevelsFabric"
		],
		"client": [
			"io.github.fourmisain.taxfreelevels.fabric.TaxFreeLevelsFabricClient"
		],
		"modmenu": [
			"io.github.fourmisain.taxfreelevels.fabric.ModMenuImpl"
		]
	},
	"mixins": [
		"taxfreelevels-common-fabric.mixins.json",
		"taxfreelevels-fabric.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.10",
		"minecraft": "${fabric_game_version_range}",
		"fabric": "*",
		"cloth-config": "*"
	},
	"custom": {
		"taxfreelevels:options": {
			"mixin.CheapAnvilRenameMixin": true,
			"mixin.FlattenAnvilCostMixin": true,
			"mixin.FlattenEnchantmentCostMixin": true,
			"mixin.RerollMixin": true
		}
	}
}
